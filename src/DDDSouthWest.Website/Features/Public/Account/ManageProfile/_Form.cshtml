@model DDDSouthWest.Website.Features.Public.Account.ManagePages.ManagePagesViewModel

@Html.AntiForgeryToken()

<validation-summary errors="@Model.Errors" />

<fieldset>
    
    <div class="pure-control-group">
        <label asp-for="Title">Page Name</label>
        <input asp-for="Title" class="pure-input-2-3"/>
    </div>

    <div class="pure-control-group">
        <label asp-for="Filename">Page Filename</label>
        <input asp-for="Filename" class="pure-input-2-3"/>
    </div>

    <div class="pure-control-group">
        <label asp-for="BodyMarkdown">Page Body</label>
        <textarea asp-for="BodyMarkdown" class="pure-input-2-3" style="height: 250px;"></textarea>
    </div>

    <div class="pure-controls">
        <button type="submit" class="pure-button pure-button-primary">Submit</button>
    </div>

</fieldset>
