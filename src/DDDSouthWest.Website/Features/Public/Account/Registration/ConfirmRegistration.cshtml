
@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Public.Account.Registration.RegistrationConfirmationViewModel

@{
    ViewBag.Tab = PageTab.Register;
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section Header {
    <page-banner title="Registration"/>
}

@section MainColBody {

    @if (Model.NeedsToApproveEmail)
    {
        <h2>Confirm registration</h2>
        <p>Please check your email account registered to confirm your email address.</p>
    }
    else
    {
        <h2>Registration Complete</h2>

        <p>You may now log in using the email address and password provided.</p>
    }
    
    

}