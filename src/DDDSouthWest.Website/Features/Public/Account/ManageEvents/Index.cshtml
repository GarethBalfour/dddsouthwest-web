@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Public.Account.ManageEvents.EventListViewModel

@{
    ViewBag.Tab = PageTab.Login;                                                        
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section Header {
    <page-banner title="Events"/>
}

@section MainColBody {

    <h2>Manage Events</h2>
    
    <div class="pure-g">
        
        <div class="pure-u-1-1 pure-block">
            <a class="pure-button pure-button-primary" href="@Url.RouteUrl(RouteNames.EventCreate)">Create new event</a>
        </div>

        <div class="pure-u-1-1 pure-block">

            <table class="pure-table pure-table-horizontal util--stretch">
                <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>Event</th>
                    <th>Date</th>
                </tr>
                </thead>

                <tbody>
                @foreach (var eventItem in Model.Events)
                {
                    <tr>
                        <td><a href="@Url.RouteUrl(RouteNames.EventEdit, new { id = eventItem.Id })">Edit</a></td>
                        <td>@eventItem.EventName</td>
                        <td>7th May 2018</td>
                    </tr>    
                }
                </tbody>
            </table>

        </div>


    </div>
    
    
    
    

}