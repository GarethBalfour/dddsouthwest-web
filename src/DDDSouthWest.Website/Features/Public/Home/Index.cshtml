@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Public.Home.HomepageViewModel

@{
    ViewBag.Tab = PageTab.Home;
    ViewBag.TitleTag = "DDD South West - a free, non-profit .NET focused developers' conference based in the South West of England";
    ViewBag.MetaDescription = "DDD South West is an inclusive, non-profit developers' conference organised by the community, for the community";
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section MainCol {

    <div class="home-banner">
        <p>
            <span class="home-banner__line1">DDD South West 2018</span>
            <span class="home-banner__line2">Saturday 21st April, 2018</span>
            <span class="home-banner__line3">Redcliffe Sixth Form Centre, Bristol, BS1 6RB</span>
        </p>
        @*<a href="#" class="button button--large button--primary">Reserve your ticket now</a>*@
    </div>
    
    <div class="grid-container">

        <div class="grid-100">
            <div class="util-text--center">
                <p class="home-strapline">DDD South West is an inclusive, non-profit developers' conference organised by the community, for the community</p>
                <a href="/page/about" class="button button--small button--primary">Learn more about us</a>
            </div>
        </div>
        
        <div class="grid-60">
            
            <h3 class="title--medium title--underline">Latest News &amp; Announcements</h3>    
            <div class="news-component__main-col">

                @{
                    var latestItem = Model.News.FirstOrDefault();
                    if (latestItem != null)
                    {
                        <h4 class="title--medium branding--primary gutter-top-none gutter-bottom-none">@latestItem.Title</h4>
                        <p>Posted @latestItem.DatePosted.ToString("ddddd, dd MMM yyyy")</p>
                        <div>@Html.Raw((string) latestItem.Body)</div>
                        <div class="gutter-top-default"></div>
                        <a href="@Url.RouteUrl(RouteNames.NewsList)" class="button button--small button--primary">More News</a>
                    }
                }

            </div>
        </div>
        
        <div class="grid-40">
            
            <h3 class="title--medium title--underline">Dates of Interest</h3>
            <div class="news-component__side-col">
                <p><strong>Session Submissions Opens:</strong><br/>
                    Tuesday 30th January 2018 - 09:00</p>
                
                <p><strong>Session Submissions Closes:</strong><br/>
                    Saturday 24th February 2018 - 00:00</p>
                
                <p><strong>Session Voting Opens:</strong><br/>
                    Saturday 3rd March 2018</p>
                
                <p><strong>Session Voting Closes:</strong><br/>
                    Saturday 17th March 2018</p>
                
                <p><strong>Registration Opens:</strong><br/>
                    Saturday 24th March 2018</p>
            </div>
        </div>
        
    </div>
    
    <div class="gutter-bottom-default"></div>

    <div class="grid-container">
        <div class="grid-100">
    
            <div class="sponsor-component">
                
                <h3 class="title--medium title--underline">Sponsors</h3>
                <p>DDD South West is a free community based conference, without the support of our sponsors it wouldn't be possible.</p>
                        
                <div class="gutter-top-default"></div>
                <a href="/page/about" class="button button--small button--primary">More about our sponsors</a>   
                    
            </div>

        </div>
    </div>
    
    <div class="gutter-bottom-default"></div>
}