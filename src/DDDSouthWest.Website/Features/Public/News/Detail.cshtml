@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Public.News.NewsDetailViewModel

@{
    ViewBag.Tab = PageTab.News;                                                        
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section Header {
    <page-banner title="News"/>
}

@section MainColBody {
        
    
    
    <div class="pure-g">
        
        <div class="pure-u-1-1 pure-block">                        
            <h2>@Model.Title</h2>
            <p>Posted @Model.DatePosted</p>
            <p>@Model.Body</p>
        </div>
        
        <div class="pure-u-1-1 pure-block">
            
            <a href="@Url.RouteUrl(RouteNames.NewsList)">View all news</a>

        </div>

    </div>

}