@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Public.News.NewsDetailViewModel

@{
    ViewBag.Tab = PageTab.News;                                                        
    Layout = "~/Views/Shared/_LayoutSideColumn.cshtml";
}

@section Header {
    <page-banner title="News"/>
}

@section MainCol {
        
    <div class="news-detail">
        <h2 class="news-detail__title branding--primary">@Model.Title</h2>
        <p class="news-detail__date">Posted @Model.DatePosted</p>
        <p class="news-detail__content">@Model.Body</p>
    </div>

            
    <div class="pure-u-1-1 pure-block">
        <a href="@Url.RouteUrl(RouteNames.NewsList)">View all news</a>    
    </div>
    
}

@section SideColumn
{
    <div style="border-left: 1px solid red; height: 500px;">sdfs</div>
}
