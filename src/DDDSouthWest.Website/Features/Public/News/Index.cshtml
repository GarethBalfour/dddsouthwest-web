@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Public.News.NewsListViewModel

@{
    ViewBag.Tab = PageTab.News;
    ViewBag.TitleTag = "Latest News - DDD South West";
    ViewBag.MetaDescription = "All of the latest news around DDD South West";
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section Header {
    <page-banner title="News"/>
}

@section MainColBody {

    <h1>Latest News</h1>
    <div class="pure-g">

        <div class="pure-u-1-1 pure-block">
            @if (Model.News.Any())
            {
                <ol class="news-list">
                    @foreach (var newsItem in Model.News)
                    {
                        <li class="news-list__item">
                            <p class="news-list__title"><a href="@Url.RouteUrl(RouteNames.NewsDetail, new {id = newsItem.Id, filename = newsItem.Filename})">@newsItem.Title</a></p>
                            <p>Posted @newsItem.DatePosted.ToString("ddddd, dd MMM yyyy")</p>
                        </li>
                    }
                </ol>
            }
            else
            {
                <p>There is currently no news, please check back at a later date.</p>
            }    
        </div>

    </div>

}