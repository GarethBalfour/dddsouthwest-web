@using DDDSouthWest.Website.Features.Admin.Account.ManagePages
@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Admin.Account.ManagePages.ManagePagesViewModel

@{
    ViewBag.Tab = PageTab.Login;                                                        
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section ScriptsHeader {
    <link rel="stylesheet" href="/js/simplemde/simplemde.min.css">
    <script src="/js/simplemde/simplemde.min.js"></script>
}

@section Header {
    <page-banner title="Pages"/>
}

@section MainColBody {

    <h2>Edit Page</h2>
    
    @using (Html.BeginForm("Edit", "ManagePages", null, FormMethod.Post, true, new { @class="pure-form pure-form-aligned"}))
    {
        @Html.HiddenFor(x => x.Id)
        @Html.Partial("_Form")
    }
    
    <script type="text/javascript">
        var simplemde = new SimpleMDE({
            element: document.getElementById("postBody"),
            tabSize: 2
        });
    </script>
}